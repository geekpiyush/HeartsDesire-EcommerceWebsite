@model ProductResponse
@{
    ViewBag.Title = "Checkout Page | Hearts Desire";
}
<link href="~/css/orders/orders.css" rel="stylesheet" />

<div class="container">
    <!-- Left Side: Billing Form -->
    <form method="post" asp-controller="Orders" asp-action="PlaceOrders">
        <input type="hidden" name="ProductID" value="@Model.ProductID" />
        <input type="hidden" name="Quantity" value="@ViewBag.Quantity" />

        <div class="form-group">
            <label>Full Name</label>
            <input type="text" name="CustomerName" placeholder="Enter your name" required />
        </div>
        <div class="form-group">
            <label>Email Address</label>
            <input type="email" name="Email" placeholder="Enter your email" required />
        </div>
        <div class="form-group">
            <label>Phone Number</label>
            <input type="text" name="MobileNumber" placeholder="Enter your phone number" required />
        </div>
        <div class="form-group">
            <label>Shipping Address</label>
            <input type="text" name="Address" placeholder="Full address" required />
        </div>
        <div class="form-group">
            <label>City</label>
            <input type="text" name="City" placeholder="Enter city" required />
        </div>
        <div class="form-group">
            <label>State</label>
            <input type="text" name="State" placeholder="Enter state" required />
        </div>
        <div class="form-group">
            <label>PIN Code</label>
            <input type="text" name="Pincode" placeholder="Enter pin code" required />
        </div>

        <button type="submit" class="btn">Place Order</button>
    </form>

    <!-- Right Side: Product Summary & Order -->
    <div class="right">
        <h2>Your Order</h2>
        <div class="product-summary">
            <div class="product-item">
                <img src="@Model.MainImagePath" alt="Perfume">
                <div class="product-info">
                    <h3>@Model.ProductName</h3>
                    <p>50ml Bottle</p>
                    <strong>₹@Model.ProductSalePrice</strong>
                </div>
            </div>

            <div class="order-summary">
                <p><span>Quantity:</span> <span>@ViewBag.Quantity</span></p>
                <p><span>Subtotal:</span> <span>₹@(Model.ProductSalePrice * (int)ViewBag.Quantity)</span></p>
                <p><span>Shipping:</span> <span>₹0</span></p>
                <p><strong>Total:</strong> <strong>₹@(Model.ProductSalePrice * (int)ViewBag.Quantity)</strong></p>
            </div>

            <!-- Submit Button is now inside the form (from Step 3) -->
        </div>
    </div>

</div>

<script>
    function placeOrder() {
      alert("Your order has been placed successfully!");
    }
</script>